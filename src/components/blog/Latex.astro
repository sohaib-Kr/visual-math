---
import katex from 'katex';
import 'katex/dist/katex.min.css'; // Server-side CSS (optional, but recommended)

const slotHtml = await Astro.slots.render('default')
const html = katex.renderToString(slotHtml, {
  throwOnError: false, // Prevents build crashes on invalid syntax
});
---
  <span class="=text-gray-600  text-[16px]" set:html={html}>
  </span>
