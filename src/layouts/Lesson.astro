---
import Layout from '../layouts/Layout.astro';
---
<Layout>
    <main id="main-container" class="w-[97%] m-6 grid grid-cols-1 grid-rows-1 mx-auto ">
        <div id="breadcrumbs" class="w-full h-12 grid grid-cols-[13%_87%]">
            <div></div>
            <div class="w-full h-fit flex gap-12">
                <div class="p-4 cursor-pointer w-fit rounded-md bg-gray-100 shadow-md shadow-gray-200 hover:bg-gray-200 transition-colors duration-200">

                    <span>Home</span>
                </div>
                <div class="p-4 cursor-pointer w-fit rounded-md bg-gray-100 shadow-md shadow-gray-200 hover:bg-gray-200 transition-colors duration-200">
                    <span>Lessons</span>
                </div>
                <div class="p-4 cursor-pointer w-fit rounded-md bg-[#b15a84] text-white">
                    <span>Animation</span>
                </div>
            </div>
        </div>
        <div class="w-full h-full grid grid-cols-[20%_80%] my-8 ">
            <div class="h-[700px]">
                <div id="progress-bar" class="grid grid-cols-1 grid-rows-1 h-full">
                </div>
            </div>
            
            <div id="parts-container" class="max-w-4xl h-fit flex flex-col ">
            <slot/>
            </div>
    </main>
    <script src="../js/progressBar.js"></script>
    <script src="../js/singlePage.js"></script>
    </Layout>

